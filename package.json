{
  "name": "syllable",
  "main": "./lib/index",
  "version": "0.0.1",
  "description": "An Atom package that sorts and manipulates words by their number of syllables",
  "keywords": [],
  "repository": "https://github.com/partials-music/atom-syllable",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "syllable:group",
      "syllable:sort",
      "syllable:clear-cache"
    ]
  },
  "dependencies": {
    "lodash": "^4.13.1",
    "moment": "^2.14.1",
    "nlp-syllables": "0.0.5",
    "nlp_compromise": "^6.5.0",
    "scrape-url": "^3.0.0"
  },
  "devDependencies": {
    "standard": "^7.0.1"
  },
  "standard": {
    "globals": [
      "atom",
      "describe",
      "it",
      "expect",
      "beforeEach",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise",
      "fit"
    ]
  },
  "configSchema": {
    "wordnikApiKey": {
      "title": "Wordnik API Key",
      "description": "Lets us pull word information from the Wordnik API",
      "type": "string",
      "default": ""
    }
  }
}
